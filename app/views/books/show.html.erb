<p style="color: green"><%= notice %></p>

<table class="table">
    <tr>
      <td><strong>Title:</strong></td>
      <td><strong>Author:</strong></td>
      <td><strong>Publisher:</strong></td>
      <td><strong>Category:</strong></td>
      <td><strong>Year release:</strong></td>
      <td><strong>Number of copies:</strong></td>
    </tr>
    <tr>
      <td>
        <%= render @book %>
      </td>
    </tr>
  </table>

<div>
  <%= link_to "Edit this book", edit_book_path(@book), class: "btn btn-warning" %>
  <%= button_to "Delete book", @book, method: :delete, class: "btn btn-danger" %>
  <%= link_to "Back to books", books_path, class: "btn btn-primary" %>
</div>
